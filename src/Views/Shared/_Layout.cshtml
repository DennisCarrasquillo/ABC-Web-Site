<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title -ABC Inventory Management System</title>
     @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    <link href="@Url.Content("~/Content/jquery-ui.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-ui-1.10.0.min.js")" type="text/javascript"></script>

</head>
<body>
    <!-- Google Tag Manager -->
    <noscript>
        <iframe src="//www.googletagmanager.com/ns.html?id=GTM-MDB45S"
                height="0" width="0" style="display:none;visibility:hidden"></iframe>
    </noscript>
    <script>
(function (w, d, s, l, i) {
w[l] = w[l] || []; w[l].push({
'gtm.start':
new Date().getTime(), event: 'gtm.js'
}); var f = d.getElementsByTagName(s)[0],
j = d.createElement(s), dl = l != 'dataLayer' ? '&l=' + l : ''; j.async = true; j.src =
'//www.googletagmanager.com/gtm.js?id=' + i + dl; f.parentNode.insertBefore(j, f);
})(window, document, 'script', 'dataLayer', 'GTM-MDB45S');</script>
    <!-- End Google Tag Manager -->

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
              
            </div>
           
            @{ABC_Inventory.Models.ActiveUser UserProps = (ABC_Inventory.Models.ActiveUser)Session["ActiveUser"];}

            <div class="navbar-collapse collapse">
                 <ul class="nav navbar-nav">
                     <li><a href="@Url.Action("Index", "Home")" >
                             <img src="~/Images/ABClogo.png" height="60" /> </a></li>
                    
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                @if (UserProps == null)
                {

                    <li>@Html.ActionLink("About Us", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact Us", "MailView", "Mail")</li>
                }                             

                @if (UserProps != null)
                { 
                     <li class="dropdown">
                         <a href="#" class="dropdown-toggle" id="dropdownCommonMenu" data-toggle="dropdown">Maintenance</a>
                         <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownCommonMenu">
                             
                             <li role="menuitem">@Html.ActionLink("Client Profile", "ClientProfile", "Clients")</li>
                             <li role="menuitem">@Html.ActionLink("User Profile", "UserProfile", "Clients")</li>

                             <li role="menuitem">@Html.ActionLink("Download Center", "Download", "Clients")</li>                        
                             <li role="menuitem">@Html.ActionLink("Licensing Manager", "", "")</li>
                             
                         </ul>
                     </li>                                                         
                }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
      
    </div> 
    @*<footer>*@
    <br/>
    <div class="container ">
        <ul class="nav navbar-nav">
            <li class="nav-text">
                &copy; @DateTime.Now.Year - ABC-Inventory.com
            </li>
        </ul>
        <ul class="nav navbar-nav  navbar-right">
            <li>
                @Html.ActionLink("About Us", "About", "Home")
            </li>
            <li>
                @Html.ActionLink("Contact Us", "MailView", "Mail")
            </li>
            <li>
                @Html.ActionLink("Privacy Policy", "PrivacyPolicy", "Home")
            </li>
            <li>
                @Html.ActionLink("Terms of Service", "TermsOfUse", "Home")
            </li>
        </ul>
    </div>
@*</footer>*@



    @RenderSection("scripts", required: false)
</body>
</html>
