}); var f = d.getElementsByTagName(s)[0],
j = d.createElement(s), dl = l != 'dataLayer' ? '&l=' + l : ''; j.async = true; j.src =
'//www.googletagmanager.com/gtm.js?id=' + i + dl; f.parentNode.insertBefore(j, f);
})(window, document, 'script', 'dataLayer', 'GTM-MDB45S');</script>
    <!-- End Google Tag Manager -->
    <div class="navbar navbar-inverse navbar-fixed-top">
       <div class="container">
 
            <div class="navbar-header">
                <a href="@Url.Action("Index", "Home")">
                    <img src="~/Images/BLSlogo.jpg" height="60" />
                </a>
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
              
            </div>
           
            @{BLS_Inventory.Models.ActiveUser UserProps = (BLS_Inventory.Models.ActiveUser)Session["ActiveUser"];}

            <div class="navbar-collapse collapse">
                
                 <ul class="nav navbar-nav">                                  
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                @if (UserProps == null)
                {

                    <li>@Html.ActionLink("About Us", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact Us", "MailView", "Mail")</li>
                }                             

                @if (UserProps != null)
                { 
                     <li class="dropdown">
                         <a href="#" class="dropdown-toggle" id="dropdownCommonMenu" data-toggle="dropdown">Maintenance</a>
                         <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownCommonMenu">
                             
                             <li role="menuitem">@Html.ActionLink("Client Profile", "ClientProfile", "Clients")</li>
                             <li role="menuitem">@Html.ActionLink("User Profile", "UserProfile", "Clients")</li>
                             <li role="menuitem">@Html.ActionLink("Create Demo DB", "DemoDB", "Clients")</li>
                             <li role="menuitem">@Html.ActionLink("Download Center", "Download", "Clients")</li>                        
                             <li role="menuitem">@Html.ActionLink("Licensing Manager", "", "")</li>
                             
                         </ul>
                     </li>                                                         
                }
                @if (UserProps != null)
                {
                    if (UserProps.UserId == "dennis" || UserProps.UserId == "julie" || UserProps.UserId == "billw")
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" id="dropdownCommonMenu" data-toggle="dropdown">Marketing</a>
                            <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownCommonMenu">
                                <li role="menuitem">@Html.ActionLink("Import Contacts", "Import", "Marketing")</li>
                                <li role="menuitem">@Html.ActionLink("Edit Contacts", "Company", "Marketing")</li>
                                <li role="menuitem">@Html.ActionLink("Create Mailing List", "Mailing", "Marketing")</li>
                            </ul>
                        </li>
                    }
                }
                </ul>
 
                 @Html.Partial("_LoginPartial")
               
             </div>
           <p>
               <center>
                <h2 style="color: #000000; background-color: #00a2e9">Business Logistics Inventory Management System</h2>
            </center>
           </p>
        </div>
    </div>
    
    <div class="container body-content">
        @RenderBody()
      
    </div> 
    @*<footer>*@
    <br/>
    <div class="container ">
       
            @*&copy; @DateTime.Now.Year - Business Logistics Systems Inc.*@
            <div style="margin-left:-1cm;">
            <ul class="nav navbar-nav">
                <li class="nav-text">
                    &copy; @DateTime.Now.Year - Business Logistics Systems Inc.
                </li>
            </ul>
        </div>
            <ul class="nav navbar-nav  navbar-right">
                <li>
                    @Html.ActionLink("About Us", "About", "Home")
                </li>
                <li>
                    @Html.ActionLink("Contact Us", "MailView", "Mail")
                </li>
                <li>
                    @Html.ActionLink("Privacy Policy", "PrivacyPolicy", "Home")
                </li>
                <li>
                    @Html.ActionLink("Terms of Service", "TermsOfUse", "Home")
                </li>
            </ul>
        </div>
@*</footer>*@



    @RenderSection("scripts", required: false)
</body>
</html>
